@model GestForma.Models.Actualite

@{
    ViewData["Title"] = "Edit News";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-dark fw-bold mt-5">Edit News</h1>
<hr />
<div class="row mx-auto">
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Champ caché pour l'IdActualite -->
            <input type="hidden" asp-for="IdActualite" />

            <!-- Titre -->
            <div class="form-group">
                <label asp-for="Titre" class="control-label"></label>
                <input asp-for="Titre" class="form-control" placeholder="Enter the title of the news" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Write the news description here"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Image -->
            <div class="form-group">
                <label for="file">Image</label>
                <input type="file" id="file" name="file" class="form-control" />
            </div>

            <!-- Bouton Save -->
            <div class="row mb-3">
                <div class="col d-grid">
                    <input type="submit" value="Save" class="w-100 btn btn-lg btn-primary" />
                </div>
            </div>
        </form>

        <!-- Bouton Retour -->
        <div class="col d-grid">
            <a asp-action="Index" class="btn btn-info text-light w-100">Back to List</a>
        </div>
    </div>
</div>
