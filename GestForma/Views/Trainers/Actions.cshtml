@model List<List<Object>>
@{
    ViewData["Title"] = "Actions";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>
    <html lang="en">
        <body>
            <div class="row">
            <div class="col-md-2 col-12 mr-md-n5 ml-md-3">
                <partial name="nav" />
            </div>
            <div class="col-md-10 col-12 table-responsive mx-auto px-4">
                <table class="table table-bordered  table-hover table-striped text-center">
                    <thead>
                        <tr>
                            <th>Last Name</th>
                            <th>First Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Field</th>
                            <th>Profile image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var trainer in Model)
                        {
                            <tr>
                                <td>@trainer[1]</td>
                                <td>@trainer[2]</td>
                                <td>@trainer[3]</td>
                                <td>@trainer[4]</td>
                                <td>@trainer[5]</td>
                                <td><img src="@trainer[6]" alt="Profile Image" style="width: 80px; height: 80px;" /></td>
                                <td>
                                    <div class="row mb-2">
                                        <form asp-action="DeleteTrainer" asp-route-id="@trainer[0]" method="post" onsubmit="return confirm('Are you sure you want to delete this trainer? ?');">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fa fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                    <div class="row">
                                        <form asp-action="EditFormTrainer" asp-route-id="@trainer[0]" method="post">
                                            <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-edit"></i> &nbsp;Edit&nbsp;&nbsp;
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            </div>
            
        </body>
    </html>

