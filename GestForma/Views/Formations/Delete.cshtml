@model GestForma.Models.Formation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutFormateur.cshtml";
}

<div class="container d-flex flex-column align-items-center text-center mt-5">
    <h1 class="text-center text-dark fw-bold mt-5">Delete Course</h1>

    <h3 class="mt-3">Are you sure you want to delete this?</h3>
    <div class="mt-4">
        <h4>Formation</h4>
        <hr class="w-50 mx-auto" />
        <dl class="row justify-content-center">
            <dt class="col-sm-3">
                Title
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Intitule)
            </dd>
            <dt class="col-sm-3">
                Description
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-3">
                Category
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Categorie)
            </dd>
            <dt class="col-sm-3">
                Duration
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Duree)
            </dd>
            <dt class="col-sm-3">
                Cost
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Cout)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="ID_Formation" />
        <input type="submit" value="Delete" class="btn btn-danger mx-2" />
        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
    </form>
</div>
