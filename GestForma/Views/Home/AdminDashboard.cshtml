@model List<GestForma.Models.Inscription>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-dark fw-bold mt-5">Welcome Admin</h1>

<!-- Search Bar -->
<form method="get" action="@Url.Action("AdminDashboard", "Home")" class="mx-4">
    <input type="text" name="search" placeholder="Search by course" class="form-control d-inline w-50" />
    <button type="submit" class="btn btn-info btn-sm ml-2">
        <i class="fa fa-search"></i> Search
    </button>
</form>

<h2 class="text-center text-dark fw-bold mt-5">Participants ready for certification</h2>

<div class="table-responsive mx-auto px-4 mt-5">
    <table class="table table-bordered table-hover table-striped text-center">
        <thead>
            <tr>
                <th>Participant Name</th>
                <th>Email</th>
                <th>Course</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.User != null ? item.User.FirstName + item.User.LastName : "No Name Available")</td>
                    <td>@(item.User != null ? item.User.Email : "No Email Available")</td>
                    <td>@(item.Formation != null ? item.Formation.Intitule : "No Course Name")</td>
                    <td>@(item.Formation != null ? item.Formation.Categorie.Title : "No Category Title")</td>
                    <td>
                        <form method="post" action="@Url.Action("MarkAsCertified", "Home")">
                            <input type="hidden" name="inscriptionId" value="@item.ID_Inscription" />
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fa fa-check"></i> Certify
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
