@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-sm" style="max-width: 800px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
            <h4 class="text-center mb-4">Enter your email to reset your password.</h4>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-primary btn-lg">Reset Password</button>
            </form>
            <div class="text-center mt-3">
                <a href="@Url.Page("/Account/Login")" class="text-muted">Back to login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
